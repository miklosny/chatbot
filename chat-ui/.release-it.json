{
  "git": {
    "commitArgs": ["-a"],
    "commitMessage": "Release chat-ui v${version}",
    "tag": false,
    "push": true,
    "pushRepo": "upstream",
    "tagName": "chat-ui-v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "releaseName": "chat-ui-v${version}",
    "draft": true,
    "release": true
  },
  "hooks": {
    "before:init": [
      "pushd ../chat-core && npm i && npm run build && popd",
      "npm run build",
      "npm run lint"
    ]
  }
}
