{
  "name": "mongodb-chatbot-ui",
  "description": "UI for the MongoDB AI Chatbot",
  "author": "MongoDB, Inc.",
  "license": "Apache-2.0",
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/mongodb-chatbot-ui.umd.js",
  "module": "./dist/mongodb-chatbot-ui.es.js",
  "exports": {
    ".": {
      "import": "./dist/mongodb-chatbot-ui.es.js",
      "require": "./dist/mongodb-chatbot-ui.umd.js"
    },
    "./css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "dev": "vite --config vite.config.component.js --mode development",
    "build:component": "tsc && vite build --config vite.config.component.js",
    "build:static-site:dev": "tsc && vite build --config vite.config.static-site.js --mode development",
    "build:static-site:staging": "tsc && vite build --config vite.config.static-site.js --mode staging",
    "build:static-site:qa": "tsc && vite build --config vite.config.static-site.js --mode qa",
    "preview:static-site:dev": "npm run build:static-site:dev && vite preview --base ./ --config vite.config.static-site.js",
    "preview:static-site:staging": "npm run build:static-site:staging && vite preview --base ./ --config vite.config.static-site.js",
    "preview:static-site:qa": "npm run build:static-site:qa && vite preview --base ./ --config vite.config.static-site.js",
    "build": "if [[ \"$ENVIRONMENT\" == \"qa\" ]]; then npm run build:static-site:qa && echo \"qa\"; else npm run build:static-site:staging; fi",
    "format": "prettier ./src --write",
    "format:check": "prettier ./src --check",
    "lint": "eslint ./src --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --config vite.config.component.js --mode development",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "release": "release-it"
  },
  "dependencies": {
    "@leafygreen-ui/badge": "^8.0.7",
    "@leafygreen-ui/banner": "^7.0.8",
    "@leafygreen-ui/box": "^3.1.4",
    "@leafygreen-ui/button": "^20.2.0",
    "@leafygreen-ui/card": "^9.0.8",
    "@leafygreen-ui/code": "^14.2.6",
    "@leafygreen-ui/icon": "^11.16.1",
    "@leafygreen-ui/icon-button": "^15.0.11",
    "@leafygreen-ui/leafygreen-provider": "^3.1.3",
    "@leafygreen-ui/loading-indicator": "^1.0.0",
    "@leafygreen-ui/menu": "^22.0.2",
    "@leafygreen-ui/modal": "^15.0.3",
    "@leafygreen-ui/skeleton-loader": "^1.0.1",
    "@leafygreen-ui/text-input": "^12.1.13",
    "@leafygreen-ui/typography": "^16.5.0",
    "@lg-chat/avatar": "^1.0.0",
    "@lg-chat/input-bar": "^1.0.0",
    "@lg-chat/lg-markdown": "^1.0.0",
    "@lg-chat/message": "^1.0.0",
    "@lg-chat/message-feed": "^1.0.0",
    "@lg-chat/message-rating": "^1.0.0",
    "@lg-chat/title-bar": "^1.0.0",
    "@microsoft/fetch-event-source": "^2.0.1",
    "buffer": "^6.0.3",
    "chat-core": "file:../chat-core",
    "esbuild": "^0.17.19",
    "prettier": "^2.8.8",
    "react-markdown": "^8.0.7",
    "stream-browserify": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-inject": "^5.0.3",
    "@storybook/addon-essentials": "^7.0.20",
    "@storybook/addon-interactions": "^7.0.20",
    "@storybook/addon-links": "^7.0.20",
    "@storybook/blocks": "^7.0.20",
    "@storybook/react": "^7.0.20",
    "@storybook/react-vite": "^7.0.20",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/react-transition-group": "^4.4.6",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-storybook": "^0.6.12",
    "node-stdlib-browser": "^1.2.0",
    "postcss": "^8.4.27",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "release-it": "^15.11.0",
    "rollup": "^3.26.3",
    "storybook": "^7.0.20",
    "typescript": "^5.0.2",
    "vite": "^4.4.7",
    "vite-plugin-libcss": "^1.1.0",
    "vite-plugin-node-polyfills": "^0.9.0"
  }
}
